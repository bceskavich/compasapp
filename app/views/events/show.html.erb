
<div id="event_show" class="row">
  <div class="row">
    <div class="large-6 columns event_image">
      <%= image_tag @event.image_url if @event.image? %>
    </div>
    <div class="large-6 columns data">
        <div class="row">
          <h1><%= @event.name %></h1>
        </div>
        <div class="row">
            <h2><%= @event.time.strftime("%l:%M%P") %>&nbsp;--&nbsp;<%= @event.date.strftime("%B %e, %Y") %></h2>
        </div>
        <div class="row">
          <% if future_event? %>
            <%= render 'attend_form' if signed_in? %> &nbsp; <a href="<%= attendees_event_path(@event) %>"><strong><%= @event.attendances.count %> attending</strong></a>
          <% else %>
            <b>Rate This Event:</b><br />
            <%= rating_for @event, "event" %>
            <br />
          <% end %>
        </div>
      <div class="row">
        Location: <%= @event.location %>
      </div>
      </br>
      <div class="row">
          <%= @event.description %>
      </div>
      </br>
      <div class="row">
        <% if @event.organization_id? %>
            Hosted By: <%= link_to @event.organization.name, @event.organization %>
        <% end %>
      </div>
      <div class="row">
        <% if @event.category_id? %>
            Category: <%= @event.category.name %>
        <% end %>
      </div>
      <div class="row">
        Ticket Info:<%= @event.ticket_info %>
      </div>
    </div><!--end data-->
  </div>
  <p id="notice"><%= notice %></p>

    <%if event_creator? %>
        <%= link_to 'Edit', edit_event_path(@event) %> |
        <td><%= link_to 'Delete Event', @event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end %>
</br>
