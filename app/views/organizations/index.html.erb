<div id="org_index" class="row">
<h1>Organizations</h1>

  <div class="large-3 columns org_listing">
    <div class="row">
        <div class="large-4 columns new_block event_pic">
          <%= link_to '+', new_organization_path %>
        </div>
        <div class="large-8 columns">
            <div class="row">
              <h2><%= link_to 'New Organization', new_organization_path, :id =>'link' %></h2>
            </div>
        </div>
    </div>
  </div>


<% @organizations.each do |organization| %>
  <div class="large-3 columns org_listing">
     <div class="row">
        <div class="large-4 columns event_pic">
          <%= image_tag organization.image_url %>
        </div>
        <div class="large-8 columns">
          <div class="row">
            <h2><%= link_to organization.name, organization, :id =>'link' %></h2>
          </div>
          <div class="row">
            <% owned_events = Event.where(:organization_id => organization.id ) %>
            <%=owned_events.count.to_s + ' events'%>
          </div>
        </div>
     </div>
  </div>

<% end %>

<div class="large-12 columns">
  <%= will_paginate @organizations %>
</div>
</div>


